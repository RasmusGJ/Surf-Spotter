<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <title>Surf Spotter</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="viewport" content="width-device, initial scale=1.0">
    <link rel="stylesheet" type="text/css" href="CSS/navBarSheet.css" />
    <link rel="stylesheet" type="text/css" href="CSS/myStyleSheet.css" />
    <link rel="stylesheet" href="CSS/footerSheet.css">
    <link rel="stylesheet" href="CSS/contactSheet.css" type="text/css">


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/jquery.magnific-popup.min.js"></script>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/magnific-popup.min.css">

</head>



@{
    Layout = null;

}
<div class="nav-bar" style="background-color:#2e2e2e">
    <nav>
        <ul>
            <li><a href="Index">Hjem</a></li>
            <li><a href="spots">Spots</a></li>
            <li><a href="Aboutus">Om os</a></li>
            <li><a href="Kontakt">Kontakt</a></li>
            <li>
                @if (User.Identity.IsAuthenticated)
                {
                    <form id="logout" action="@Url.Action("Logout", "Account")" method="post">
                        <a href="javascript: $('#logout').submit()" class="last">
                            Logout
                            <span style="margin-left:10px;" class="tagline">@User.Identity.Name</span>
                        </a>
                    </form>
                }
                else
                {
                    <a href="@Url.Action("Login", "Account")" title="log in" class="last">
                        Login
                    </a>
                }
            </li>
        </ul>
    </nav>
    
</div>

<div class="hero-text" style="top: 15%">
    <h1>Kontakt</h1>
</div>

<div class="contact">
    <!-- ved ikke om videoen skal være med -->
    <!-- <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
        <source src="Wave-video.mp4" type="video/mp4">
    </video> -->
    <div class="container">
        <div class="contact-form">
            <form>
                <div class="inputgroup">
                    <input type="text" name="fname" required="required">
                    <span>Fornavn</span>
                </div>
                <div class="inputgroup">
                    <input type="text" name="lname" required="required">
                    <span>Efternavn</span>
                </div>
                <div class="inputgroup">
                    <input type="email" name="email" required="required">
                    <span>Mail</span>
                </div>
                <div class="inputgroup">
                    <textarea required="required"></textarea>
                    <span>Besked</span>
                </div>
                <div class="inputgroup">
                    <input class="sub" type="submit" value="Send">
                </div>
            </form>
        </div>
        <div class="surfer">
            <img src="Assets/Images/surfer2.png">
        </div>
    </div>
</div>
